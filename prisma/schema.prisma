// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// yarn prisma migrate dev

model Usuario {
  id    String @id @default(uuid())
  email String
  senha String

  ativo Boolean @default(false)

  produtos    Produto[]
  localizacao Localizacao[]
  dados       Dados?
  formato     Formato?

  regiao   Regioes @relation(fields: [regiaoID], references: [id])
  regiaoID String

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

  @@map("usuarios")
}

model Formato {
  id      String  @id @default(uuid())
  entrega Boolean @default(false)
  parcela String  @default("0")

  usuario   Usuario @relation(fields: [usuarioID], references: [id])
  usuarioID String  @unique

  @@map("formatos")
}

model Dados {
  id       String @id @default(uuid())
  nome     String @default("")
  telefone String @default("")
  bio      String @default("")
  // avatar String @default("")

  usuario   Usuario @relation(fields: [usuarioID], references: [id])
  usuarioID String  @unique

  @@map("dados")
}

model Localizacao {
  id       String @id @default(uuid())
  endereco String @default("")
  bairro   String @default("")
  cidade   String @default("Teresina")
  estado   String @default("Piaui")
  latlng   String @default("0,0")

  usuario   Usuario @relation(fields: [usuarioID], references: [id])
  usuarioID String  @unique

  @@map("localizacoes")
}

model Produto {
  id        String   @id @default(uuid())
  nome      String
  descricao String
  preco     String
  oferta    String   @default("")
  tamanho   String[]
  cor       String[]
  files     Json[]

  usuario   Usuario @relation(fields: [usuarioID], references: [id])
  usuarioID String

  categoria   Categoria @relation(fields: [categoriaID], references: [id])
  categoriaID String

  @@map("produtos")
}

model Categoria {
  id   String @id @default(uuid())
  nome String

  produto Produto[]

  @@map("categorias")
}

model Regioes {
  id   String @id @default(uuid())
  nome String

  usuario Usuario[]

  @@map("regioes")
}
